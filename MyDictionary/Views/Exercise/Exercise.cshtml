
@model MyDictionary.Models.ViewModels.ExerciseViewModel

<br />
<h2 class="text-info">Write French Word</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        @if (Model.Word.Id != 0)
        {
            <input type="hidden" asp-for="Word.Id" />
        }

        <input id="correctFrenchWord" type="hidden" asp-for="Word.FrenchWord" />

        <div class="text-dnager" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Word.PolishWord"></label>
            </div>
            <div class="col-6">
                <input asp-for="Word.PolishWord" class="form-control" disabled />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Word.FrenchWord"></label>
            </div>
            <div class="col-6">
                <input id="inputFrenchWord" idclass="form-control" autocomplete="off" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Lesson"></label>
            </div>
            <div class="col-6">
                <input asp-for="Lesson" class="form-control" disabled />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 ">
                <a asp-controller="Exercise" asp-action="Exercise" asp-route-Lesson="@Model.Lesson" asp-route-Repetition="@Model.Repetition" class="btn btn-warning form-control" onclick="validateInput()">
                    Check
                </a>
            </div>
            <div class="col-3 ">
                <button type="submit" class="btn btn-primary form-control">
                    New Word
                </button>
            </div>
            <div class="col-3">
                <a asp-controller="Words" asp-action="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script>
        function validateInput() {
            var correctFrenchWord = document.getElementById("correctFrenchWord").value;
            var inputFrenchWord = document.getElementById("inputFrenchWord").value;

            if (correctFrenchWord === inputFrenchWord) {
                alert("Good!")
            } else {
                alert("Wrong!");
            }
        }
    </script>
}